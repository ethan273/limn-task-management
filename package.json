{
  "name": "limn-task-management",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "npx tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "ANALYZE=true next build",
    "deploy:staging": "vercel --env=preview",
    "deploy:production": "vercel --prod",
    "db:export": "node scripts/migrate-database-to-staging.js",
    "db:migrate:staging": "cd migrations/staging && ./run_migrations.sh",
    "db:seed:staging": "psql $DATABASE_URL -f ./migrations/staging/004_seed_data.sql",
    "env:check": "node scripts/check-env.js",
    "test:staging": "npm run env:check && npm run build && npm run test:integration",
    "test:integration": "node scripts/test-staging.js",
    "migrate:staging": "node scripts/apply-staging-migrations.js"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@supabase/supabase-js": "^2.45.0",
    "@supabase/ssr": "^0.4.0",
    "lucide-react": "^0.400.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.3.0",
    "sonner": "^1.5.0",
    "date-fns": "^3.6.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.5.3",
    "tailwindcss": "^3.4.4",
    "postcss": "^8.4.39",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5"
  },
  "description": "Limn Task Management System"
}