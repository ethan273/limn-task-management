# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# QuickBooks Integration Configuration
# Get these from your QuickBooks Developer Account: https://developer.intuit.com/
QUICKBOOKS_CLIENT_ID=your_quickbooks_app_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_app_client_secret

# QuickBooks Environment (sandbox or production)
QUICKBOOKS_ENVIRONMENT=sandbox

# QuickBooks OAuth Redirect URI (should match your app configuration)
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/api/quickbooks/callback

# QuickBooks Webhook Secret (optional but recommended for security)
# Generate a random string for webhook signature verification
QUICKBOOKS_WEBHOOK_SECRET=your_webhook_verification_secret

# QuickBooks Webhook URL (for registering webhooks with QuickBooks)
# This should be publicly accessible (use ngrok for local development)
QUICKBOOKS_WEBHOOK_URL=https://your-domain.com/api/quickbooks/webhooks